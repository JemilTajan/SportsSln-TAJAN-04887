@model Order

<h2>Check out now!</h2>
<p>Please enter your details, and we'll ship your goods right away</p>

<form asp-action="Checkout" method="post">
    <h3>Ship to</h3>
    <div class="form-group">
        <label>Name:</label>
        <input asp-form="Name" class="form-control" />
    </div>
    <h3>Address</h3>
    <div class="form-group">
        <label>Line 1:</label>
        <input asp-form="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Line 2:</label>
        <input asp-form="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Line 3:</label>
        <input asp-form="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>City:</label>
        <input asp-form="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>State/Region:</label>
        <input asp-form="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>Zip Code:</label>
        <input asp-form="ZipCode" class="form-control" />
    </div>
    <div class="form-group">
        <label>Country:</label>
        <input asp-form="Country" class="form-control" />
    </div>
    <h3>Options</h3>
    <div class="checkbox">
        <label>
            <input asp-formaction="GiftWrap" /> Gift wrap these items
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
</form>
